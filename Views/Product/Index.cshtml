@model Product_Listing.Models.Product

@{
    ViewBag.Title = "Add Product";
}

<div class="container">
    <h2>Add a New Product</h2>

    <form asp-controller="Product" asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <a asp-controller="Product" asp-action="ProductList" class="btn btn-secondary">View Product List</a>
</div>
